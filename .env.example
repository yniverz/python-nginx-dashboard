# App
APP_NAME="Multi-Domain Edge Manager"
LISTEN_PORT=8000
ROOT_PATH=""
DATA_DIR="data"
SESSION_SECRET="change_this_to_a_secure_random_string"
WEB_USERNAME="admin"
WEB_PASSWORD="admin"

# SSL Configuration
USE_SSL=true                        # Set to true to enable HTTPS with self-signed certificate

# Nginx integration
ENABLE_NGINX=false
NGINX_HTTP_CONF_PATH="/etc/nginx/conf.d/edge_http.conf"
NGINX_STREAM_CONF_PATH="/etc/nginx/stream.d/edge_stream.conf"
NGINX_RELOAD_CMD="nginx -s reload"

# Cloudflare integration
ENABLE_CLOUDFLARE=false
CLOUDFLARE_API_TOKEN=""
CF_ORIGIN_CA_KEY=""
CF_SSL_DIR="/etc/nginx/ssl"

# Let's Encrypt integration (alternative to Cloudflare Origin CA)
ENABLE_LETSENCRYPT=false            # Set to true to use Let's Encrypt for SSL certificates
LE_EMAIL=""                         # Required: Your email address for Let's Encrypt account
LE_PRODUCTION=false                 # Use staging server initially (recommended), then switch to true
LE_SSL_DIR="/etc/letsencrypt"       # Certbot configuration directory
LE_ACME_DIR="/var/www/challenges"   # Directory for ACME challenge files (webroot for certbot)
LE_RENEW_SOON=30                    # Renew certificates X days before expiry

# Networking
LOCAL_IP="127.0.0.1"

# Debug
DEBUG_MODE=true
