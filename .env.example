# server
APP_HOST=0.0.0.0
APP_PORT=8080
DB_PATH=var/data/app.sqlite
ADMIN_TOKEN=changeme-admin

# nginx paths (ensure nginx has permission to read)
NGINX_HTTP_CONF=var/nginx/reverse-proxy-http.conf
NGINX_STREAM_CONF=var/nginx/reverse-proxy-stream.conf
NGINX_CMD=nginx
NGINX_RELOAD_CMD=nginx -s reload

# cloudflare (API token must have Zone:Read+Edit DNS)
CF_API_BASE=https://api.cloudflare.com/client/v4
CF_API_TOKEN=your-cloudflare-api-token

# origin ca (this is NOT the same as API token)
# retrieve from Cloudflare Dashboard → SSL/TLS → Origin Server → "Origin CA Key"
CF_ORIGIN_CA_BASE=https://api.cloudflare.com/client/v4
CF_ORIGIN_CA_KEY=your-origin-ca-key

# default ACME/CA email for domain certs (unused by Origin CA, but stored for you)
DEFAULT_ACME_EMAIL=ops@example.com
