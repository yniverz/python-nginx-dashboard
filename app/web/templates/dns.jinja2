{% extends "_layout.jinja2" %}

{% block content %}
<style>
/* DNS table specific styling */
.dns-table {
  table-layout: fixed;
  width: 100%;
}

.dns-table th:nth-child(1), /* Name */
.dns-table td:nth-child(1) { 
  width: 15%; 
  max-width: 120px; 
}

.dns-table th:nth-child(2), /* Domain */
.dns-table td:nth-child(2) { 
  width: 12%; 
  max-width: 100px; 
}

.dns-table th:nth-child(3), /* Type */
.dns-table td:nth-child(3) { 
  width: 8%; 
  max-width: 80px; 
}

.dns-table th:nth-child(4), /* Content - most likely to be long */
.dns-table td:nth-child(4) { 
  width: 25%; 
  max-width: 400px; 
  min-width: 120px;
  position: relative;
}

.dns-table th:nth-child(5), /* TTL */
.dns-table td:nth-child(5) { 
  width: 6%; 
  max-width: 60px; 
}

.dns-table th:nth-child(6), /* Priority */
.dns-table td:nth-child(6) { 
  width: 8%; 
  max-width: 70px; 
}

.dns-table th:nth-child(7), /* Proxied */
.dns-table td:nth-child(7) { 
  width: 8%; 
  max-width: 80px; 
}

.dns-table th:nth-child(8), /* Managed By */
.dns-table td:nth-child(8) { 
  width: 10%; 
  max-width: 100px; 
}

.dns-table th:nth-child(9), /* Actions */
.dns-table td:nth-child(9) { 
  width: 8%; 
  max-width: 80px; 
}

/* DNS table content cell hover expansion */
.dns-table td:nth-child(4) .text-truncate {
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  cursor: help;
  display: block;
}

.dns-table td:nth-child(4):hover .text-truncate {
  overflow: visible;
  white-space: normal;
  word-break: break-all;
  background: var(--bg-elev);
  border: 1px solid var(--border);
  border-radius: var(--radius-sm);
  padding: 4px 6px;
  position: absolute;
  z-index: 1000;
  box-shadow: var(--shadow-md);
  max-width: 400px;
  min-width: 200px;
  left: 0;
  top: 0;
}
</style>
<h1>DNS</h1>

    {{ unsynced_changes }}
{% if unsynced_changes %}
<div class="alert alert-warning">
    You have unsynced changes.
</div>
{% endif %}

<form method="POST" action="{{ url_for('create_dns_record') }}">
    <input type="text" name="name" placeholder="Name" required>
    <select name="domain_id" required>
        {% for domain in domains %}
        <option value="{{ domain.id }}">{{ domain.name }}</option>
        {% endfor %}
    </select>
    <select name="type" required>
        <option value="A">A</option>
        <option value="AAAA">AAAA</option>
        <option value="CNAME">CNAME</option>
        <option value="TXT">TXT</option>
        <option value="MX">MX</option>
        <option value="NS">NS</option>
        <option value="SRV">SRV</option>
    </select>
    <input type="text" name="content" placeholder="Content" required>
    <input type="number" name="ttl" placeholder="TTL" value="1" required>
    <input type="number" name="priority" placeholder="Priority">
    <input type="checkbox" name="proxied" value="true"> Proxied
    <input type="hidden" name="managed_by" value="USER">
    <button type="submit">Add Record</button>
</form>
<br>

<table class="dns-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Domain</th>
            <th>Type</th>
            <th>Content</th>
            <th>TTL</th>
            <th>Priority</th>
            <th>Proxied</th>
            <th>Managed By</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for record in dns_records %}
        <tr {% if record.managed_by != "USER" %}class="muted"{% endif %}>
            <td style="text-align: right;">{{ record.name }}</td>
            <td>{{ record.domain.name }}</td>
            <td>{{ record.type.name }}</td>
            <td class="text-truncate" title="{{ record.content }}">{{ record.content }}</td>
            <td>{{ record.ttl }}</td>
            <td>{{ record.priority }}</td>
            <td>{{ record.proxied }}</td>
            <td>{{ record.managed_by.name }}</td>
            <td>
                <a href="{{ url_for('edit_dns_record', record_id=record.id) }}">Edit</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}