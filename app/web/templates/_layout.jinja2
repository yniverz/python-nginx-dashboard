<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Domain Manager</title>
  <link rel="stylesheet" href="{{ url_for('static_files', path='styles.css') }}">
</head>

<body>
  <header>
    <h1>Domain Manager</h1>
    <nav>
      <a href="{{ url_for('view_dashboard') }}">Dashboard</a> |
      <a href="{{ url_for('view_domains') }}">Domains</a> |
      <a href="{{ url_for('view_proxies') }}">Proxies</a> |
      <a href="{{ url_for('view_routes') }}">Routes</a> |
      <a href="{{ url_for('view_dns') }}">DNS</a> |
      <a href="{{ url_for('logout') }}">Logout</a>
    </nav>
  </header>

  <main>
    {% if request.state.flash_messages %}
    <br>
    <div class="flash-container">
        {% for msg in request.state.flash_messages %}
        <div class="alert alert-{{ msg.category }}">
            {{ msg.message }}
        </div>
        {% endfor %}
    </div>
    {% endif %}
    <br>
    {% block content %}{% endblock %}
  </main>

  <!-- New footer -->
  <footer>
    <div class="footer-container">
      <div class="footer-left">
        <span>&copy; <span id="year"></span> Multi-Domain Edge Manager.</span>
        <span class="footer-sep">â€¢</span>
        <span>Licensed under NCPUL v1.3</span>
      </div>
      <div class="footer-right">
        <a href="https://github.com/your-org/python-nginx-dashboard" target="_blank" rel="noopener">GitHub project</a>
      </div>
    </div>
  </footer>
  <script>
    // keep the year current without server changes
    (function(){ var el=document.getElementById('year'); if(el){ el.textContent=new Date().getFullYear(); }})();
  </script>
</body>
</html>
