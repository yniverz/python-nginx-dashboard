<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Domain Manager</title>
  <link rel="stylesheet" href="{{ url_for('static', path='styles.css') }}">
</head>
<body>
  <header>
    <h1>Domain Manager</h1>
    <nav>
      <a href="{{ url_for('view_dashboard') }}">Dashboard</a> |
      <a href="{{ url_for('view_domains') }}">Domains</a> |
      <a href="{{ url_for('view_proxies') }}">Proxies</a> |
      <a href="{{ url_for('view_routes') }}">Routes</a> |
      <a href="{{ url_for('view_dns') }}">DNS</a> |
      <a href="{{ url_for('logout') }}">Logout</a>
    </nav>
  </header>
  <main>
    {% if request.state.flash_messages %}
    <br>
    <div class="flash-container">
        {% for msg in request.state.flash_messages %}
        <div class="alert alert-{{ msg.category }}">
            {{ msg.message }}
        </div>
        {% endfor %}
    </div>
    {% endif %}
    <br>
    {% block content %}{% endblock %}
  </main>
</body>
</html>
