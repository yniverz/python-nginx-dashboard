<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proxy Manager</title>
    <style>
        body { font-family: Arial, sans-serif; }
    </style>
</head>
<body>
<div class="container">
    <h2>Add Gateway Server</h2>
    <form method="POST" action="{{ application_root + url_for('add_gateway_server') }}">
        <input type="text" name="id" placeholder="Name (UUID)" required>
        <input type="text" name="host" placeholder="Host" required>
        <input type="text" name="port" placeholder="Bind Port" required>
        <input type="text" name="auth_token" placeholder="Auth Token" required>
        <input type="text" name="webserver_host" placeholder="Webserver Host (optional)">
        <input type="text" name="webserver_port" placeholder="Webserver Port (optional)">
        <input type="text" name="webserver_user" placeholder="Webserver User (optional)">
        <input type="password" name="webserver_password" placeholder="Webserver Password (optional)">
        <input type="submit" value="Add Gateway Server">
    </form>
</div>

<script>
// make all webserver fields required when webserver_host is filled, and optional when empty
const webserverHost = document.querySelector('input[name="webserver_host"]');
const webserverPort = document.querySelector('input[name="webserver_port"]');
const webserverUser = document.querySelector('input[name="webserver_user"]');
const webserverPassword = document.querySelector('input[name="webserver_password"]');

webserverHost.addEventListener('input', () => {
    const isRequired = webserverHost.value.trim() !== '';
    webserverPort.required = isRequired;
    webserverUser.required = isRequired;
    webserverPassword.required = isRequired;
});
</script>
</body>
</html>